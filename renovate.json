{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
  ],
  "dependencyDashboard": true,
  "schedule": [
    "before 2am"
  ],
  "packageRules": [
    {
      "description": "Automerge non-major updates",
      "matchUpdateTypes": ["digest", "minor", "patch"],
      "automerge": true
    }
  ]
}
